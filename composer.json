{
    "name": "reflexive-comms/symfony-components",
    "description": "Customized Symfony components for headless web APIs",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "symfony",
        "symfony-components",
        "headless",
        "api"
    ],
    "authors": [
        {
            "name": "Sandor Semsey",
            "email": "semsey.sandor@reflexive.hu"
        }
    ],
    "require": {
        "php": ">=8.2",
        "symfony/http-kernel": "7.4.*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.69",
        "phpunit/phpunit": "^9.6"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "ReflexiveComms\\SymfonyComponents\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ReflexiveComms\\SymfonyComponents\\": "tests/unit/",
            "ReflexiveComms\\SymfonyComponents\\Test\\": "tests/Test/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
